<header class="bg-white shadow-sm border-b border-gray-200 sticky top-0 z-50">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <nav class="flex items-center justify-between h-16" aria-label="Navigation principale">
            <div class="flex items-center">
                <a href="{{ path('app_home') }}" class="navbar-brand">
                    <img class="h-10 w-auto" src="{{ asset('logo/udbl-logo.png') }}" alt="Logo UDBL" />
                </a>
            </div>

            <!-- Menu desktop -->
            <div class="hidden lg:flex lg:items-center lg:space-x-8">
                <a href="{{ path('app_home') }}" class="text-sm font-medium text-gray-700 hover:text-blue-600 transition-colors">
                    Accueil
                </a>
                {% if is_granted("ROLE_GESTIONNAIRE") %}
                    <a href="{{ path('admin_dashboard') }}" class="text-sm font-medium text-gray-700 hover:text-blue-600 transition-colors">
                        Tableau de bord
                    </a>
                    <a href="{{ path('admin_equipement_index') }}" class="text-sm font-medium text-gray-700 hover:text-blue-600 transition-colors">
                        Équipements
                    </a>
                    <a href="{{ path('reservation_index') }}" class="text-sm font-medium text-gray-700 hover:text-blue-600 transition-colors">
                        Prise
                    </a>
                    <a href="{{ path('app_inventaire_index') }}" class="text-sm font-medium text-gray-700 hover:text-blue-600 transition-colors">
                        Inventaire
                    </a>
                    <a href="{{ path('app_rapport_index') }}" class="text-sm font-medium text-gray-700 hover:text-blue-600 transition-colors">
                        Rapport
                    </a>
                {% endif %}
                {% if app.user %}
                    <div class="flex items-center space-x-4 ml-8 pl-8 border-l border-gray-200">
                        <span class="text-sm text-gray-600">{{ app.user.email }}</span>
                        <a href="{{ path('logout') }}" class="btn-primary px-4 py-2 rounded-lg text-sm">
                            Déconnexion
                        </a>
                    </div>
                {% else %}
                    <a href="{{ path('login') }}" class="btn-primary px-4 py-2 rounded-lg text-sm">
                        Connexion
                    </a>
                {% endif %}
            </div>

            <!-- Menu mobile button -->
            <div class="block lg:hidden">
                <button type="button" class="mobile-menu-button p-2 rounded-md text-gray-700 hover:text-blue-600 hover:bg-gray-100">
                    <span class="sr-only">Ouvrir le menu</span>
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>
        </nav>

        <!-- Menu mobile -->
        <div class="mobile-menu hidden lg:hidden border-t border-gray-200 py-4">
            <div class="space-y-2">
                <a href="{{ path('app_home') }}" class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-gray-50 rounded-md">
                    <i class="fas fa-home mr-3"></i>Accueil
                </a>
                {% if is_granted("ROLE_GESTIONNAIRE") %}
                    <a href="{{ path('admin_dashboard') }}" class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-gray-50 rounded-md">
                        <i class="fas fa-tachometer-alt mr-3"></i>Tableau de bord
                    </a>
                    <a href="{{ path('admin_equipement_index') }}" class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-gray-50 rounded-md">
                        <i class="fas fa-laptop mr-3"></i>Équipements
                    </a>
                    <a href="{{ path('reservation_index') }}" class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-gray-50 rounded-md">
                        <i class="fas fa-calendar-check mr-3"></i>Prise
                    </a>
                    <a href="{{ path('app_inventaire_index') }}" class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-gray-50 rounded-md">
                        <i class="fas fa-archive mr-3"></i>Inventaire
                    </a>
                    <a href="{{ path('app_rapport_index') }}" class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-gray-50 rounded-md">
                        <i class="fas fa-file-alt mr-3"></i>Rapport
                    </a>
                {% endif %}
                {% if app.user %}
                    <div class="border-t border-gray-200 pt-4 mt-4">
                        <div class="px-3 py-2 text-sm text-gray-600"><i class="fas fa-user mr-2"></i>{{ app.user.email }}</div>
                        <a href="{{ path('logout') }}" class="block px-3 py-2 text-base font-medium text-red-600 hover:bg-red-50 rounded-md">
                            <i class="fas fa-sign-out-alt mr-3"></i>Déconnexion
                        </a>
                    </div>
                {% else %}
                    <div class="border-t border-gray-200 pt-4 mt-4">
                        <a href="{{ path('login') }}" class="block px-3 py-2 text-base font-medium text-blue-600 hover:bg-blue-50 rounded-md">
                            <i class="fas fa-sign-in-alt mr-3"></i>Connexion
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</header>
