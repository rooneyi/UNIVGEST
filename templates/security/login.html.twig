{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}


{% block body %}
    <section class="bg-gray-50 ">
        <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
            <div  class="flex items-center mb-6 text-2xl font-semibold text-gray-900 ">
                <img class="w-auto h-12 mr-2" src="{{ asset('logo/udbl-logo.svg') }}" alt="logo">
                Udbl - Connexion
            </div>
            <div
                class="w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0  ">
                <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                    <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                        Se connecter a votre compte
                    </h1>
                    {% if error %}
                        <div class="error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <form action="{{ path('login') }}" method="post" class="space-y-4 md:space-y-6">
                        <div>

                            <label for="inputEmail" placeholder="name@company.com"
                                   class="block mb-2 text-sm font-medium text-gray-900 ">Votre
                                email</label>
                            <input id="inputEmail" name="_username" type="email" autocomplete="email" required autofocus
                                   placeholder="Adresse email" value="{{ last_username }}"
                                   class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5    "/>
                        </div>
                        <div>
                            <label for="password" class="block mb-2 text-sm font-medium text-gray-900 ">Password</label>
                            <input type="password" name="_password" id="password" placeholder="••••••••"
                                   class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5   "
                                   required="">
                        </div>

                        <button type="submit"
                                class="w-full text-white bg-green-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center ">
                            Se Connecter
                        </button>

                    </form>

                </div>
            </div>
        </div>

    </section>

{% endblock %}
