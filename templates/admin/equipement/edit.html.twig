{% extends 'base.html.twig' %}

{% block title %}Modifier un équipement{% endblock %}

{% block stylesheets %}
<style>
body {
    min-height: 100vh;
    margin: 0;
    background: #fff;
    font-family: 'Segoe UI', Arial, sans-serif;
}
.form-container {
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 2px 12px rgba(33, 150, 243, 0.04), 0 1.5px 6px rgba(67, 233, 123, 0.04);
    max-width: 500px;
    margin: 60px auto;
    padding: 32px 28px 28px 28px;
}
.form-title {
    color: #2196f3;
    text-align: center;
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 24px;
    letter-spacing: 1px;
}
.input-group {
    margin-bottom: 18px;
}
input[type="text"],
textarea,
select {
    width: 100%;
    padding: 10px 12px;
    border: 1px solid #b2f7cc;
    border-radius: 7px;
    font-size: 1rem;
    color: #2196f3;
    background: #f8faff;
    margin-top: 6px;
    transition: border 0.2s;
}
input[type="text"]:focus,
textarea:focus,
select:focus {
    border: 1.5px solid #2196f3;
    outline: none;
}
.button-submit {
    width: 100%;
    padding: 10px 0;
    background: linear-gradient(90deg, #2196f3 60%, #43e97b 100%);
    color: #fff;
    border: none;
    border-radius: 7px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s;
    margin-top: 10px;
    box-shadow: 0 2px 8px rgba(33,150,243,0.07);
}
.button-submit:hover {
    background: linear-gradient(90deg, #43e97b 60%, #2196f3 100%);
}
.success-message {
    background-color: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
    padding: 10px;
    border-radius: 5px;
    margin-bottom: 20px;
}
.error-message {
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
    padding: 10px;
    border-radius: 5px;
    margin-bottom: 20px;
}
</style>
{% endblock %}

{% block body %}
<div class="form-container">
    <div style="display: flex; justify-content: flex-start; align-items: center; margin-bottom: 18px;">
        <a href="{{ path('app_home') }}" title="Retour" style="color:#2196f3; font-size:1.2rem; text-decoration:none; display:flex; align-items:center;">
            <span style="font-size:1.5rem; margin-right:6px;">&#8592;</span> Retour à l'accueil
        </a>
    </div>
    <h2 class="form-title">Modifier un équipement</h2>

    {% if app.session.flashbag.has('success') %}
        <div class="success-message">
            {{ app.session.flashbag.get('success')[0] }}
        </div>
    {% endif %}
    {% if app.session.flashbag.has('error') %}
        <div class="error-message">
            {{ app.session.flashbag.get('error')[0] }}
        </div>
    {% endif %}

    <form action="{{ path('admin_equipement_edit', {'id': equipement.id}) }}" method="post">
        <div class="input-group">
            <label for="nom">Nom</label>
            <input id="nom" name="nom" type="text" required value="{{ equipement.nom }}">
        </div>
        <div class="input-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" rows="2">{{ equipement.description }}</textarea>
        </div>
        <div class="input-group">
            <label for="etat">État</label>
            <select id="etat" name="etat" required>
                <option value="Disponible" {% if equipement.etat == 'Disponible' %}selected{% endif %}>Disponible</option>
                <option value="En maintenance" {% if equipement.etat == 'En maintenance' %}selected{% endif %}>En maintenance</option>
                <option value="Hors service" {% if equipement.etat == 'Hors service' %}selected{% endif %}>Hors service</option>
            </select>
        </div>
        <div class="input-group">
            <label for="disponible">Disponible</label>
            <select id="disponible" name="disponible">
                <option value="1" {% if equipement.disponible %}selected{% endif %}>Oui</option>
                <option value="0" {% if not equipement.disponible %}selected{% endif %}>Non</option>
            </select>
        </div>
        <div class="input-group">
            <label for="capteurs">Capteurs (optionnel)</label>
            <input id="capteurs" name="capteurs" type="text" value="{{ equipement.capteurs }}">
        </div>
        <button type="submit" class="button-submit">Enregistrer</button>
    </form>
</div>
{% endblock %}
