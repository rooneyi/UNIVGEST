{% extends 'base.html.twig' %}

{% block title %}Modifier un équipement{% endblock %}

{% block body %}
<div class="flex flex-col items-center justify-center min-h-screen">
    {% if app.session.flashbag.has('error') %}
        <div class="error-message">{{ app.session.flashbag.get('error')[0] }}</div>
    {% endif %}
    {% if app.session.flashbag.has('success') %}
        <div class="success-message">{{ app.session.flashbag.get('success')[0] }}</div>
    {% endif %}
    <form action="{{ path('admin_equipement_edit', {'id': equipement.id}) }}" method="post" class="mx-auto mt-16 max-w-3xl sm:mt-20 px-4 sm:px-6 lg:px-8 w-full">
        <div class="border-b border-gray-900/10 pb-12 space-y-12 w-full ">
            <div class="pb-12">
                <h2 class="text-base/7 font-semibold text-gray-900 text-center">Modifier un équipement</h2>
                <p class="mt-1 text-sm/6 text-gray-600 text-center">Mettez à jour les informations de l'équipement.</p>
                <div class="mt-10 flex flex-col items-center justify-center">
                    <div class="w-full max-w-md">
                        <label for="nom" class="block text-sm/6 font-medium text-gray-900">Nom</label>
                        <div class="mt-2">
                            <input id="nom" name="nom" type="text" required value="{{ equipement.nom }}"
                                   class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-600 sm:text-sm/6" />
                        </div>
                    </div>
                </div>
                <div class="mt-10 flex flex-col items-center justify-center">
                    <div class="w-full max-w-md">
                        <label for="description" class="block text-sm/6 font-medium text-gray-900">Description</label>
                        <div class="mt-2">
                            <textarea id="description" name="description" rows="2"
                                      class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-600 sm:text-sm/6">{{ equipement.description }}</textarea>
                        </div>
                    </div>
                </div>
                <div class="mt-10 flex flex-col items-center justify-center">
                    <div class="w-full max-w-md">
                        <label for="etat" class="block text-sm/6 font-medium text-gray-900">État</label>
                        <div class="mt-2">
                            <select id="etat" name="etat" required
                                    class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-600 sm:text-sm/6">
                                <option value="Disponible" {% if equipement.etat == 'Disponible' %}selected{% endif %}>Disponible</option>
                                <option value="En maintenance" {% if equipement.etat == 'En maintenance' %}selected{% endif %}>En maintenance</option>
                                <option value="Hors service" {% if equipement.etat == 'Hors service' %}selected{% endif %}>Hors service</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="mt-10 flex flex-col items-center justify-center">
                    <div class="w-full max-w-md">
                        <label for="code" class="block text-sm/6 font-medium text-gray-900">Code</label>
                        <div class="mt-2">
                            <input id="code" name="code" type="text" value="{{ equipement.code }}"
                                   class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-600 sm:text-sm/6"
                                   placeholder="Code de l'équipement (optionnel)" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-10 flex flex-col items-center justify-center">
                <div class="w-full max-w-md">
                    <button type="submit" class="w-full rounded-md bg-green-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-green-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Enregistrer les modifications</button>
                </div>
            </div>
        </div>
    </form>
    <div class="flex flex-col items-center justify-center w-full mt-6 text-[1.05rem]">
        <div class="flex flex-wrap items-center justify-center gap-2 w-full">
            <a href="{{ path('admin_equipement_index') }}" title="Retour" class="flex items-center text-black font-semibold transition-colors hover:text-green-600">
                <span class="text-xl mr-2">&#8592;</span> Retour à la liste
            </a>
        </div>
    </div>
</div>
{% endblock %}
