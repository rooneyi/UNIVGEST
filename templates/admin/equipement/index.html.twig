{% extends 'base.html.twig' %}

{% block title %}Administration des Équipements | Université Don Bosco Lubumbashi{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
{% endblock %}

{% block body %}
    <div class="min-h-full bg-gray-50">

        <main class="py-10 px-6 max-w-7xl mx-auto">
            <h1 class="text-4xl font-bold text-gray-800 mb-8">Gestion des équipements</h1>

            <!-- Actions -->
            <div class="flex flex-wrap gap-4 mb-10">
                <a href="{{ path('admin_equipement_new') }}"
                   class="inline-flex items-center gap-2 bg-green-600 hover:bg-green-700 text-white text-sm font-medium px-5 py-2.5 rounded shadow">
                    <i class="fa fa-plus-circle"></i> Ajouter un équipement
                </a>
                <a href="{{ path('admin_equipement_maintenance') }}"
                   class="inline-flex items-center gap-2 bg-orange-500 hover:bg-orange-600 text-white text-sm font-medium px-5 py-2.5 rounded shadow">
                    <i class="fa fa-tools"></i> Voir les maintenances
                </a>
                <a href="{{ path('reservation_index') }}"
                   class="inline-flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium px-5 py-2.5 rounded shadow">
                    <i class="fa fa-file-export"></i> Sorties d’équipements
                </a>
                <a href="{{ path('remise_equipement_page') }}"
                   class="inline-flex items-center gap-2 bg-green-600 hover:bg-green-700 text-white text-sm font-medium px-5 py-2.5 rounded shadow">
                    <i class="fa fa-undo"></i> Remise des équipements
                </a>
            </div>

            <!-- Statistiques -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
                <div class="bg-white rounded-xl shadow p-6 text-center">
                    <div class="text-4xl font-bold text-blue-700 mb-1">
                        <i class="fa fa-box mr-2"></i>{{ totalEquipements ?? equipements|length }}
                    </div>
                    <div class="text-gray-600 text-sm">Total équipements</div>
                </div>
                <div class="bg-white rounded-xl shadow p-6 text-center">
                    <div class="text-4xl font-bold text-green-700 mb-1">
                        <i class="fa fa-check-circle mr-2"></i>{{ totalDisponibles ?? equipements|filter(e => e.etat == 'Disponible')|length }}
                    </div>
                    <div class="text-gray-600 text-sm">Disponibles</div>
                </div>
                <div class="bg-white rounded-xl shadow p-6 text-center">
                    <div class="text-4xl font-bold text-blue-600 mb-1">
                        <i class="fa fa-calendar-check mr-2"></i>{{ totalReserves ?? equipements|filter(e => e.etat == 'Pris')|length }}
                    </div>
                    <div class="text-gray-600 text-sm">Pris</div>
                </div>
                <div class="bg-white rounded-xl shadow p-6 text-center">
                    <div class="text-4xl font-bold text-orange-500 mb-1">
                        <i class="fa fa-wrench mr-2"></i>{{ totalMaintenance ?? equipements|filter(e => e.etat matches '/Maintenance/i')|length }}
                    </div>
                    <div class="text-gray-600 text-sm">En maintenance</div>
                </div>

            </div>

            <!-- Listes -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <!-- Disponibles -->
                <div>
                    <h2 class="text-lg font-semibold mb-3 text-green-700">Équipements disponibles</h2>
                    <ul class="bg-white rounded-lg shadow p-4 divide-y divide-gray-100">
                        {% set disponibles = equipements|filter(e => e.etat == 'Disponible') %}
                        {% if disponibles|length > 0 %}
                            {% for eq in disponibles %}
                                <li class="py-2 flex flex-col gap-1">
                                    <span class="text-gray-800">{{ eq.code ~ ' - ' ~ eq.nom }}</span>
                                    <span class="text-xs text-gray-600">RFID: {{ eq.rfidTag ?? 'N/A' }}</span>
                                    <span class="text-xs text-gray-600">Poids: {{ eq.poidsActuel ?? 'N/A' }} g</span>
                                    <span class="text-xs text-gray-600">Distance 1: {{ eq.distance1 ?? 'N/A' }} cm</span>
                                    <span class="text-xs text-gray-600">Distance 2: {{ eq.distance2 ?? 'N/A' }} cm</span>
                                    <span class="text-xs px-2 py-1 rounded bg-gray-100 text-gray-600">Présence: {{ eq.isPhysiquementPresent() ? 'Oui' : 'Non' }}</span>
                                    <div class="flex gap-2">
                                        <span class="bg-green-100 text-green-700 text-xs font-semibold px-2 py-1 rounded">Disponible</span>
                                        <form method="POST" action="{{ path('admin_equipement_declasser', {id: eq.id}) }}" onsubmit="return confirm('Voulez-vous vraiment déclasser cet équipement ?');">
                                            <button type="submit" class="bg-red-600 hover:bg-red-700 text-white text-xs px-3 py-1 rounded">Déclasser</button>
                                        </form>
                                    </div>
                                </li>
                            {% endfor %}
                        {% else %}
                            <li class="py-2 text-gray-500">Aucun équipement disponible.</li>
                        {% endif %}
                    </ul>
                </div>

                <!-- Pris -->
                <div>
                    <h2 class="text-lg font-semibold mb-3 text-blue-700">Équipements pris</h2>
                    <ul class="bg-white rounded-lg shadow p-4 divide-y divide-gray-100">
                        {% set reserves = equipements|filter(e => e.etat == 'Pris') %}
                        {% if reserves|length > 0 %}
                            {% for eq in reserves %}
                                <li class="py-2 flex justify-between items-center">
                                    <span class="text-gray-800">{{ eq.code ~ ' - ' ~ eq.nom }}</span>
                                    <div class="flex gap-2">
                                        <span class="bg-blue-100 text-blue-700 text-xs font-semibold px-2 py-1 rounded">Pris</span>
                                        <form method="POST" action="{{ path('remise_equipement', {id: eq.id}) }}">
                                            <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white text-xs px-3 py-1 rounded">
                                                Remettre
                                            </button>
                                        </form>
                                    </div>
                                </li>
                            {% endfor %}
                        {% else %}
                            <li class="py-2 text-gray-500">Aucun équipement pris.</li>
                        {% endif %}
                    </ul>
                </div>

                <!-- Maintenance -->
                <div>
                    <h2 class="text-lg font-semibold mb-3 text-orange-700">Équipements en maintenance</h2>
                    <ul class="bg-white rounded-lg shadow p-4 divide-y divide-gray-100">
                        {% set en_maintenance = equipements|filter(e => e.etat matches '/maintenance/i') %}
                        {% if en_maintenance|length > 0 %}
                            {% for eq in en_maintenance %}
                                <li class="py-2 flex justify-between items-center">
                                    <span class="text-gray-800">{{ eq.code ~ ' - ' ~ eq.nom }}</span>
                                    <span class="bg-orange-100 text-orange-700 text-xs font-semibold px-2 py-1 rounded">Maintenance</span>
                                </li>
                            {% endfor %}
                        {% else %}
                            <li class="py-2 text-gray-500">Aucun équipement en maintenance.</li>
                        {% endif %}
                    </ul>
                </div>

                <!-- Déclassés -->
                <div>
                    <h2 class="text-lg font-semibold mb-3 text-red-700">Équipements déclassés</h2>
                    <ul class="bg-white rounded-lg shadow p-4 divide-y divide-gray-100">
                        {% set declasses = equipements|filter(e => e.etat|lower == 'déclassé' or e.etat|lower == 'declasser') %}
                        {% if declasses|length > 0 %}
                            {% for eq in declasses %}
                                <li class="py-2 flex justify-between items-center">
                                    <span class="text-gray-800">{{ eq.code ~ ' - ' ~ eq.nom }}</span>
                                    <span class="bg-red-100 text-red-700 text-xs font-semibold px-2 py-1 rounded">Déclassé</span>
                                </li>
                            {% endfor %}
                        {% else %}
                            <li class="py-2 text-gray-500">Aucun équipement déclassé.</li>
                        {% endif %}
                    </ul>
                </div>
            </div>

            <!-- Suivi des équipements en temps réel -->
            <div class="mb-12">
                <h2 class="text-xl font-bold mb-4 text-green-700">Suivi des équipements en temps réel</h2>
                <div id="realtime-equipements" class="mt-10"></div>
            </div>
        </main>
    </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
function getBadgeColor(etat) {
  if (etat.toLowerCase().includes('disponible')) return 'bg-green-500';
  if (etat.toLowerCase().includes('pris')) return 'bg-blue-500';
  if (etat.toLowerCase().includes('maintenance')) return 'bg-orange-500';
  if (etat.toLowerCase().includes('déclassé') || etat.toLowerCase().includes('declasser')) return 'bg-red-500';
  return 'bg-gray-400';
}
function refreshEquipementsRealtime() {
  fetch('/api/equipements/realtime')
    .then(response => response.json())
    .then(data => {
      let html = '<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">';
      data.forEach(eq => {
        // Détection présence
        let present = false;
        if (
          eq.distance1 !== undefined && eq.distance2 !== undefined && eq.poids !== undefined &&
          eq.distance1 < 5 && eq.distance2 < 5 && eq.poids >= 20
        ) {
          present = true;
        }
        html += `
          <div class="relative p-6 border rounded-xl shadow bg-white flex flex-col gap-2">
            <span class="absolute top-4 right-4 px-3 py-1 rounded-full text-white text-xs font-bold ${getBadgeColor(eq.etat)}">
              ${present ? 'Présent' : 'Pris'}
            </span>
            <h3 class="font-bold text-lg mb-2">${eq.nom}</h3>
            <div class="flex flex-col gap-1 text-sm">
              <span><strong>Code:</strong> ${eq.code}</span>
              <span><strong>RFID:</strong> ${eq.rfid_tag || 'N/A'}</span>
              <span><strong>Poids:</strong> ${eq.poids || 'N/A'} g</span>
              <span><strong>Distance 1:</strong> ${eq.distance1 || 'N/A'} cm</span>
              <span><strong>Distance 2:</strong> ${eq.distance2 || 'N/A'} cm</span>
              <span><strong>Dernière MAJ:</strong> ${eq.last_update ? new Date(eq.last_update).toLocaleTimeString() : 'N/A'}</span>
            </div>
          </div>
        `;
      });
      html += '</div>';
      document.getElementById('realtime-equipements').innerHTML = html;
    });
}
setInterval(refreshEquipementsRealtime, 5000);
document.addEventListener('DOMContentLoaded', refreshEquipementsRealtime);
</script>
{% endblock %}
