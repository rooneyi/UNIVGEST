{% extends 'base.html.twig' %}

{% block title %}Administration des Équipements | Université Don Bosco Lubumbashi{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
{% endblock %}

{% block body %}
    <div class="min-h-full bg-gray-50">

        <main class="py-10 px-6 max-w-7xl mx-auto">
            <h1 class="text-4xl font-bold text-gray-800 mb-8">Gestion des équipements</h1>

            <!-- Actions -->
            <div class="flex flex-wrap gap-4 mb-10">
                <a href="{{ path('admin_equipement_new') }}"
                   class="inline-flex items-center gap-2 bg-green-600 hover:bg-green-700 text-white text-sm font-medium px-5 py-2.5 rounded shadow">
                    <i class="fa fa-plus-circle"></i> Ajouter un équipement
                </a>

                <a href="{{ path('reservation_index') }}"
                   class="inline-flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium px-5 py-2.5 rounded shadow">
                    <i class="fa fa-file-export"></i> Sorties d’équipements
                </a>
                <a href="{{ path('remise_equipement_page') }}"
                   class="inline-flex items-center gap-2 bg-green-600 hover:bg-green-700 text-white text-sm font-medium px-5 py-2.5 rounded shadow">
                    <i class="fa fa-undo"></i> Remise des équipements
                </a>
            </div>

            <!-- Statistiques -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
                <div class="bg-white rounded-xl shadow p-6 text-center">
                    <div class="text-4xl font-bold text-blue-700 mb-1">
                        <i class="fa fa-box mr-2"></i>{{ totalEquipements ?? equipements|length }}
                    </div>
                    <div class="text-gray-600 text-sm">Total équipements</div>
                </div>
                <div class="bg-white rounded-xl shadow p-6 text-center">
                    <div class="text-4xl font-bold text-green-700 mb-1">
                        <i class="fa fa-check-circle mr-2"></i>{{ totalDisponibles ?? equipements|filter(e => e.etat == 'Disponible')|length }}
                    </div>
                    <div class="text-gray-600 text-sm">Disponibles</div>
                </div>
                <div class="bg-white rounded-xl shadow p-6 text-center">
                    <div class="text-4xl font-bold text-blue-600 mb-1">
                        <i class="fa fa-calendar-check mr-2"></i>{{ totalReserves ?? equipements|filter(e => e.etat == 'Pris')|length }}
                    </div>
                    <div class="text-gray-600 text-sm">Pris</div>
                </div>
{#                <div class="bg-white rounded-xl shadow p-6 text-center">#}
{#                    <div class="text-4xl font-bold text-orange-500 mb-1">#}
{#                        <i class="fa fa-wrench mr-2"></i>{{ totalMaintenance ?? equipements|filter(e => e.etat matches '/Maintenance/i')|length }}#}
{#                    </div>#}
{#                    <div class="text-gray-600 text-sm">En maintenance</div>#}
{#                </div>#}

            </div>

            <!-- Listes -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-10">
                <!-- Disponibles -->
                <div>
                    <h2 class="text-lg font-semibold mb-3 text-green-700 flex items-center gap-2"><i class="fa fa-check-circle"></i> Disponibles</h2>
                    <ul class="bg-white rounded-xl shadow p-4 divide-y divide-gray-100 min-h-[200px]">
                        {% set disponibles = equipements|filter(e => e.etat == 'Disponible') %}
                        {% if disponibles|length > 0 %}
                            {% for eq in disponibles %}
                                <li class="py-4 flex flex-col gap-2">
                                    <span class="font-bold text-green-700 text-base">{{ eq.nom }}</span>
                                    <span class="text-xs text-gray-600">Code: {{ eq.code }}</span>
{#                                    <span class="text-xs text-gray-600">RFID: {{ eq.rfidTag ?? 'N/A' }}</span>#}
{#                                    <span class="text-xs text-gray-600">Poids: {{ eq.poidsActuel ?? 'N/A' }} g</span>#}
{#                                    <span class="text-xs text-gray-600">Distance 1: {{ eq.distance1 ?? 'N/A' }} cm</span>#}
{#                                    <span class="text-xs text-gray-600">Distance 2: {{ eq.distance2 ?? 'N/A' }} cm</span>#}
                                    <span class="text-xs text-gray-600">Compartiment : {{ eq.compartiment ?? 'Non défini' }}</span>
                                    <div class="flex gap-2 mt-2">
                                        <a href="{{ path('admin_equipement_edit', {'id': eq.id}) }}" class="bg-yellow-500 hover:bg-yellow-600 text-white text-xs px-3 py-1 rounded">Modifier</a>
                                        <form method="post" action="{{ path('admin_equipement_placer_maintenance', {'id': eq.id}) }}" class="inline">
                                            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white text-xs px-3 py-1 rounded">Placer en maintenance</button>
                                        </form>
                                        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white text-xs px-3 py-1 rounded">Déclasser</button>
                                    </div>
                                </li>
                            {% endfor %}
                        {% else %}
                            <li class="py-2 text-gray-500">Aucun équipement disponible.</li>
                        {% endif %}
                    </ul>
                </div>
                <!-- Pris -->
                <div>
                    <h2 class="text-lg font-semibold mb-3 text-blue-700 flex items-center gap-2"><i class="fa fa-box"></i> Pris</h2>
                    <ul class="bg-white rounded-xl shadow p-4 divide-y divide-gray-100 min-h-[200px]">
                        {% set reserves = equipements|filter(e => e.etat == 'Pris') %}
                        {% if reserves|length > 0 %}
                            {% for eq in reserves %}
                                <li class="py-4 flex flex-col gap-2">
                                    <span class="font-bold text-blue-700 text-base">{{ eq.nom }}</span>
                                    <span class="text-xs text-gray-600">Code: {{ eq.code }}</span>
{#                                    <span class="text-xs text-gray-600">RFID: {{ eq.rfidTag ?? 'N/A' }}</span>#}
{#                                    <span class="text-xs text-gray-600">Poids: {{ eq.poidsActuel ?? 'N/A' }} g</span>#}
{#                                    <span class="text-xs text-gray-600">Distance 1: {{ eq.distance1 ?? 'N/A' }} cm</span>#}
{#                                    <span class="text-xs text-gray-600">Distance 2: {{ eq.distance2 ?? 'N/A' }} cm</span>#}
                                    <span class="inline-block bg-blue-100 text-blue-700 text-xs font-semibold px-2 py-1 rounded">Pris</span>
                                    <div class="flex gap-2 mt-2">
                                        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white text-xs px-3 py-1 rounded">Déclasser</button>
                                    </div>
                                </li>
                            {% endfor %}
                        {% else %}
                            <li class="py-2 text-gray-500">Aucun équipement pris.</li>
                        {% endif %}
                    </ul>
                </div>
                <!-- Déclassés -->
                <div>
                    <h2 class="text-lg font-semibold mb-3 text-red-700 flex items-center gap-2"><i class="fa fa-ban"></i> Déclassés</h2>
                    <ul class="bg-white rounded-xl shadow p-4 divide-y divide-gray-100 min-h-[200px]">
                        {% set declasses = equipements|filter(e => e.etat matches '/Déclassé|Declasser/i') %}
                        {% if declasses|length > 0 %}
                            {% for eq in declasses %}
                                <li class="py-4 flex flex-col gap-2">
                                    <span class="font-bold text-red-700 text-base">{{ eq.nom }}</span>
                                    <span class="text-xs text-gray-600">Code: {{ eq.code }}</span>
                                    <span class="text-xs text-gray-600">RFID: {{ eq.rfidTag ?? 'N/A' }}</span>
                                    <span class="text-xs text-gray-600">Poids: {{ eq.poidsActuel ?? 'N/A' }} g</span>
                                    <span class="text-xs text-gray-600">Distance 1: {{ eq.distance1 ?? 'N/A' }} cm</span>
                                    <span class="text-xs text-gray-600">Distance 2: {{ eq.distance2 ?? 'N/A' }} cm</span>
                                    <span class="inline-block bg-red-100 text-red-700 text-xs font-semibold px-2 py-1 rounded">Déclassé</span>
                                </li>
                            {% endfor %}
                        {% else %}
                            <li class="py-2 text-gray-500">Aucun équipement déclassé.</li>
                        {% endif %}
                    </ul>
                </div>
            </div>

            <div class="mb-12 w-full px-2">
                <h2 class="text-2xl font-bold mb-6 text-green-700 flex items-center gap-2">
                    <i class="fa fa-microchip"></i> Suivi intelligent des équipements en temps réel
                </h2>
                <div id="realtime-equipements-dashboard" class="w-full"></div>
            </div>
        </main>
    </div>

    <!-- Modal global -->
    <div id="global-modal" class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-40 hidden">
      <div class="bg-white rounded-lg shadow-lg p-8 w-full max-w-lg relative max-h-[90vh] overflow-y-auto">
        <button type="button" class="absolute top-2 right-2 text-gray-400 hover:text-gray-700 text-2xl" onclick="closeGlobalModal()">&times;</button>
        <h2 class="text-xl font-bold mb-4 text-center"><img class="w-12" src="{{ asset('logo/udbl-logo.svg') }}" />Sortie : Sélection d'équipements</h2>
        <form action="{{ path('reservation_index') }}" method="post" class="space-y-4">
          <input type="hidden" name="equipement_id" id="equipement-id-global-modal" />
          <input type="hidden" name="date_prise" value="{{ "now"|date('Y-m-d H:i:s') }}">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Nom</label>
            <input type="text" name="nom" class="block w-full border border-gray-300 rounded px-3 py-2" required />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Post-nom</label>
            <input type="text" name="postnom" class="block w-full border border-gray-300 rounded px-3 py-2" required />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Prénom</label>
            <input type="text" name="prenom" class="block w-full border border-gray-300 rounded px-3 py-2" required />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Promotion</label>
            <select name="promotion" class="block w-full border border-gray-300 rounded px-3 py-2" required>
              <option value="">Sélectionner</option>
              <option value="L1">L1</option>
              <option value="L2">L2</option>
              <option value="L3">L3</option>
              <option value="L4">L4</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Filière</label>
            <input type="text" name="filiere" id="filiere-global" class="block w-full border border-gray-300 rounded px-3 py-2" readonly />
          </div>
          <script>
            document.querySelector('select[name="promotion"]').addEventListener('change', function() {
              const filiereInput = document.getElementById('filiere-global');
              if (this.value === 'L1' || this.value === 'L2') {
                filiereInput.value = 'Science de base';
                filiereInput.readOnly = true;
              } else {
                filiereInput.value = '';
                filiereInput.readOnly = false;
              }
            });
          </script>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Adresse email</label>
            <input type="email" name="email" class="block w-full border border-gray-300 rounded px-3 py-2" required />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Numero de tél��phone</label>
            <input type="tel" name="telephone" class="block w-full border border-gray-300 rounded px-3 py-2" required />
          </div>
          <button type="submit" class="inline-flex items-center gap-x-2 rounded-full border border-green-700 bg-green-600 px-5 py-2 text-sm font-semibold text-white shadow-md hover:bg-green-700 hover:border-green-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-700 transition-all duration-150">
            <svg class="-ml-0.5 h-5 w-5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" /></svg>
            Valider la prise
          </button>
        </form>
      </div>
    </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
function getBadgeColor(etat, isNotRemis) {
  if (isNotRemis) return 'bg-red-500';
  if (etat.toLowerCase().includes('disponible')) return 'bg-green-500';
  if (etat.toLowerCase().includes('pris')) return 'bg-blue-500';
  if (etat.toLowerCase().includes('maintenance')) return 'bg-orange-500';
  if (etat.toLowerCase().includes('déclassé') || etat.toLowerCase().includes('declasser')) return 'bg-red-500';
  return 'bg-gray-400';
}

// SUIVI EN TEMPS REEL (identique dashboard)
function loadRealtimeEquipementsDashboard() {
  fetch('/api/equipements/realtime')
    .then(response => response.json())
    .then(data => {
      let html = '<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 w-full">';
      data.forEach(eq => {
        if (eq.etat && eq.etat.toLowerCase() !== 'disponible') return;
        let poidsValeur = (eq.weight != null && eq.weight !== '') ? parseFloat(eq.weight) :
          (eq.sensor_data && eq.sensor_data.weight != null && eq.sensor_data.weight !== '' ? parseFloat(eq.sensor_data.weight) : null);
        let etatPoids = (poidsValeur && poidsValeur <= 355005.09) ? 'Disponible' : 'Indisponible';
        let badgePoidsClass = (poidsValeur && poidsValeur <= 355005.09) ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700';
        html += `
          <div class="bg-white rounded-xl shadow p-4 min-h-[200px] mb-4 flex flex-col gap-2" data-equipement-id="${eq.id}">
            <span class="font-bold text-base text-green-700">${eq.nom}</span>
            <span class="text-xs text-gray-600">Code: ${eq.code}</span>
            <span class="text-xs text-gray-600">RFID: ${eq.rfid_tag || 'N/A'}</span>
            ${eq.compartiment == '1' ? `<span class=\"text-xs text-gray-600\">Poids:
  <span class=\"inline-block px-2 py-1 rounded text-xs font-semibold ${badgePoidsClass}\">${etatPoids}</span>
</span>` : ''}
            ` + (
              eq.compartiment == '1' ?
                `<span class="text-xs text-gray-600">Capteur Ultrasonic: ${eq.distance1 || 'N/A'} cm
                  <span class="inline-block px-2 py-1 rounded text-xs font-semibold ${eq.distance1 !== undefined && eq.distance1 < 30 ? 'bg-red-100 text-red-700' : 'bg-green-100 text-green-700'}">
                    ${eq.distance1 !== undefined && eq.distance1 < 30 ? 'Indisponible' : 'Disponible'}
                  </span>
                </span>` :
              eq.compartiment == '2' ?
                `<span class="text-xs text-gray-600">Capteur Ultrasonic: ${eq.distance2 || 'N/A'} cm
                  <span class="inline-block px-2 py-1 rounded text-xs font-semibold ${eq.distance2 !== undefined && eq.distance2 < 30 ? 'bg-red-100 text-red-700' : 'bg-green-100 text-green-700'}">
                    ${eq.distance2 !== undefined && eq.distance2 < 30 ? 'Indisponible' : 'Disponible'}
                  </span>
                </span>` :
                `<span class="text-xs text-gray-600">Capteur Ultrasonic: N/A</span>`
            ) +
            `<span class="text-xs text-gray-600">Compartiment : ` +
              (eq.compartiment == '1' ? `Compartiment 1` :
                (eq.compartiment == '2' ? `Compartiment 2` : 'Non défini')) +
            `</span>
          </div>
        `;
      });
      html += '</div>';
      document.getElementById('realtime-equipements-dashboard').innerHTML = html;
    });
}
loadRealtimeEquipementsDashboard();
setInterval(loadRealtimeEquipementsDashboard, 10000);

document.addEventListener('DOMContentLoaded', refreshEquipementsRealtime);
function openGlobalModal(equipementId) {
    document.getElementById('global-modal').classList.remove('hidden');
    document.getElementById('equipement-id-global-modal').value = equipementId;
}
function closeGlobalModal() {
    document.getElementById('global-modal').classList.add('hidden');
}
// Gestion de la soumission du formulaire de prise d'équipement
const globalModalForm = document.querySelector('#global-modal form');
globalModalForm.addEventListener('submit', async function(e) {
    e.preventDefault();
    const formData = new FormData(globalModalForm);
    const response = await fetch('/api/equipements/prise', {
        method: 'POST',
        body: formData
    });
    if (response.ok) {
        closeGlobalModal();
        refreshEquipementsRealtime();
    } else {
        alert('Erreur lors de la prise de l\'équipement.');
    }
});
</script>
{% endblock %}
