{% extends 'base.html.twig' %}

{% block title %}Nouvel Équipement{% endblock %}

{% block body %}

    <div class="max-w-3xl mx-auto mt-10 bg-white shadow-md rounded-lg p-8">
        <div  class="flex items-center mb-6 text-2xl font-semibold text-gray-900 ">
            <img class="w-auto h-12 mr-2" src="{{ asset('logo/udbl-logo.svg') }}" alt="logo">
            Udbl - Enregistrer un Équipement
        </div>

        {% if error %}
            <div class="mb-4 text-sm text-red-600">{{ error }}</div>
        {% endif %}

        <form method="POST" action="{{ path('admin_equipement_new') }}" class="space-y-6">
            <div>
                <label for="nom" class="block text-sm font-medium text-gray-700">Nom</label>
                <input type="text" name="nom" id="nom" required
                       class="mt-2 p-3 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" />
            </div>

            <div>
                <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
                <textarea name="description" id="description" rows="4"
                          class="mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"></textarea>
            </div>

            <div>
                <label for="etat" class="block text-sm font-medium text-gray-700">État</label>
                <select name="etat" id="etat" required
                        class="mt-1 block w-full rounded-md border border-gray-300 bg-white py-2 px-3 shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                    <option value="Disponible">Disponible</option>

                </select>
            </div>

            <div>
                <label for="capteurs" class="block text-sm font-medium text-gray-700">Capteurs</label>
                <input type="text" name="capteurs" id="capteurs"
                       class="mt-2 p-3  block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                       placeholder="ex: température, humidité, vibration..." />
            </div>

            <div>
                <label for="code" class="block text-sm font-medium text-gray-700">Code</label>
                <input type="text" name="code" id="code"
                       class="mt-2 p-3 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
                       placeholder="Code de l'équipement (optionnel)" />
            </div>

            <div>
                <label for="compartiment" class="block text-sm font-medium text-gray-700">Compartiment</label>
                <select name="compartiment" id="compartiment" required
                        class="mt-1 block w-full rounded-md border border-gray-300 bg-white py-2 px-3 shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                    <option value="1">Compartiment 1</option>
                    <option value="2">Compartiment 2</option>
                    <option value="3">Compartiment 3</option>
                    <option value="">Non défini</option>
                </select>
            </div>

            <div class="flex items-center">
                <input type="hidden" name="disponible" id="disponible" value="Disponible"
                       class="h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500">
{#                <label for="disponible" class="ml-2 block text-sm text-gray-700">Disponible</label>#}
            </div>

            <div class="pt-4">
                <button type="submit"
                        class="w-full inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none">
                    Enregistrer
                </button>
            </div>
        </form>
    </div>

{% endblock %}
