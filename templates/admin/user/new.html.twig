{% extends 'base.html.twig' %}

{% block title %}Ajouter un maintenancier{% endblock %}

{% block body %}
    <div class="flex flex-col items-center justify-center min-h-screen">
        <div class="mx-auto mt-16 max-w-3xl sm:mt-20 px-4 sm:px-6 lg:px-8 w-full">
            <div class="border-b border-gray-900/10 pb-12 space-y-12 w-full ">
                <div class="pb-12">
                    <h2 class="text-base/7 font-semibold text-gray-900 text-center">Ajouter un maintenancier</h2>
                    <p class="mt-1 text-sm/6 text-gray-600 text-center">Créer un nouveau maintenancier pour la plateforme.</p>
                    <div class="mt-10 flex flex-col items-center justify-center">
                        <div class="w-full max-w-md">
                            <form action="{{ path('admin_user_new') }}" method="post">
                                <div class="mb-6">
                                    <label for="email" class="block text-sm/6 font-medium text-gray-900">Email</label>
                                    <div class="mt-2">
                                        <input id="email" name="email" type="email" required placeholder="prenom.nom@esisalama.org"
                                               class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-600 sm:text-sm/6" />
                                    </div>
                                </div>
                                <div class="mb-6">
                                    <label for="password" class="block text-sm/6 font-medium text-gray-900">Mot de passe</label>
                                    <div class="mt-2">
                                        <input id="password" name="password" type="password" required placeholder="Mot de passe"
                                               class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-600 sm:text-sm/6" />
                                    </div>
                                </div>
                                <div class="mb-6">
                                    <label for="role" class="block text-sm/6 font-medium text-gray-900">Rôle</label>
                                    <div class="mt-2">
                                        <select id="role" name="role" required
                                                class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-600 sm:text-sm/6">
                                            <option value="ROLE_USER">Maintenancier</option>
                                            <option value="ROLE_ADMIN">Administrateur</option>
                                        </select>
                                    </div>
                                </div>
                                <button type="submit" class="w-full rounded-md bg-green-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-green-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Créer</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="flex flex-wrap gap-4 mb-8">
                    <a href="{{ path('admin_user_index') }}" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 flex items-center"><i class="fa fa-users mr-2"></i>Liste des maintenanciers</a>
                </div>
            </div>
        </div>
        <div class="flex flex-col items-center justify-center w-full mt-6 text-[1.05rem]">
            <div class="flex flex-wrap items-center justify-center gap-2 w-full">
                <a href="{{ path('admin_dashboard') }}" class="text-black font-semibold ml-2 transition-colors hover:text-blue-700">Retour à l'administration</a>
                <span class="hidden sm:inline-block mx-2 text-gray-400">|</span>
                <a href="{{ path('app_home') }}" title="Retour" class="flex items-center text-black font-semibold transition-colors hover:text-green-600">
                    <span class="text-xl mr-2">&#8592;</span> Retour accueil
                </a>
            </div>
        </div>
    </div>
{% endblock %}
