{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block stylesheets %}
<style>
body {
    min-height: 100vh;
    margin: 0;
    background: linear-gradient(135deg, #2196f3 0%, #43e97b 100%, #fff 100%);
    font-family: 'Segoe UI', Arial, sans-serif;
}
.admin-table-container {
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 4px 24px rgba(33, 150, 243, 0.08), 0 1.5px 6px rgba(67, 233, 123, 0.08);
    max-width: 900px;
    margin: 60px auto;
    padding: 32px 28px 28px 28px;
}
.admin-title {
    color: #2196f3;
    text-align: center;
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 24px;
}
.admin-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 24px;
}
.admin-table th, .admin-table td {
    border: 1px solid #43e97b;
    padding: 10px 8px;
    text-align: center;
}
.admin-table th {
    background: #e3f2fd;
    color: #2196f3;
}
.admin-table tr:nth-child(even) {
    background: #f8faff;
}
.admin-btn {
    background: linear-gradient(90deg, #2196f3 60%, #43e97b 100%);
    color: #fff;
    border: none;
    border-radius: 6px;
    padding: 7px 18px;
    margin: 0 2px;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    text-decoration: none;
    transition: background 0.2s;
}
.admin-btn:hover {
    background: linear-gradient(90deg, #43e97b 60%, #2196f3 100%);
}
.add-btn {
    display: inline-block;
    margin-bottom: 18px;
    background: #43e97b;
    color: #fff;
    padding: 10px 24px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    transition: background 0.2s;
}
.add-btn:hover {
    background: #2196f3;
}
</style>
{% endblock %}

{% block body %}
<div class="admin-table-container">
    <div class="admin-title">Gestion des utilisateurs</div>
    <a href="{{ path('admin_user_new') }}" class="add-btn">Ajouter un utilisateur</a>
    <table class="admin-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Rôles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles|join(', ') }}</td>
                <td>
                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="admin-btn">Modifier</a>
                    <a href="{{ path('admin_user_delete', {'id': user.id}) }}" class="admin-btn" onclick="return confirm('Supprimer cet utilisateur ?');">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="4">Aucun utilisateur trouvé.</td></tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

