{% extends 'base.html.twig' %}

{% block title %}Gestion des Utilisateurs{% endblock %}

{% block body %}
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <h1 class="text-3xl font-bold text-blue-700 mb-8 text-center">Gestion des Utilisateurs</h1>

        <div class="mb-6 text-right">
            <a href="{{ path('admin_user_new') }}"
               class="inline-block bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">Ajouter un Utilisateur</a>
        </div>

        <div class="overflow-x-auto bg-white rounded-xl shadow">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-blue-100">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-blue-800 uppercase tracking-wider">ID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-blue-800 uppercase tracking-wider">Email</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-blue-800 uppercase tracking-wider">Rôles</th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-blue-800 uppercase tracking-wider">Actions</th>
                </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-100">
                {% for user in users %}
                    <tr class="hover:bg-gray-50 transition">
                        <td class="px-6 py-4 text-sm text-gray-700">{{ user.id }}</td>
                        <td class="px-6 py-4 text-sm text-gray-700">{{ user.email }}</td>
                        <td class="px-6 py-4 text-sm text-gray-700">
                            {% for role in user.roles %}
                                <span class="inline-block bg-green-100 text-green-700 text-xs font-semibold mr-1 px-2 py-1 rounded">{{ role|replace({'ROLE_': ''}) }}</span>
                            {% endfor %}
                        </td>
                        <td class="px-6 py-4 text-center space-x-2">
                            <a href="{{ path('admin_user_edit', {'id': user.id}) }}"
                               class="inline-block bg-indigo-600 text-white text-sm px-4 py-2 rounded hover:bg-indigo-700 transition">Modifier</a>
                            <a href="{{ path('admin_user_delete', {'id': user.id}) }}"
                               onclick="return confirm('Supprimer cet utilisateur ?');"
                               class="inline-block bg-red-600 text-white text-sm px-4 py-2 rounded hover:bg-red-700 transition">Supprimer</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="px-6 py-4 text-center text-gray-500">Aucun maintenancier trouvé.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
