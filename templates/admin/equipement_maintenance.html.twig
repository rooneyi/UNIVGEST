{% extends 'base.html.twig' %}
{% block body %}
<div class="min-h-screen bg-gray-50 flex flex-col">
  <div class="flex-1 w-full mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12 mt-24">
    <h1 class="text-3xl font-bold mb-8">Équipements en maintenance</h1>

    {% set totalDisponibles = equipementsAll|filter(e => e.etat == 'Disponible')|length %}
    {% set totalReserves = equipementsAll|filter(e => e.etat == 'Pris')|length %}
    {% set totalMaintenance = equipementsAll|filter(e => e.etat == 'Maintenance')|length %}

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow p-6 flex flex-col items-center">
            <div class="text-3xl font-extrabold text-blue-700 flex items-center">{{ totalEquipements is defined ? totalEquipements : equipementsAll|length }}</div>
            <div class="text-gray-600 mt-2">Total équipements</div>
        </div>
        <div class="bg-white rounded-lg shadow p-6 flex flex-col items-center">
            <div class="text-3xl font-extrabold text-green-700 flex items-center">{{ totalDisponibles is defined ? totalDisponibles : equipementsAll|filter(e => e.etat == 'Disponible' or e.etat == 'disponible')|length }}</div>
            <div class="text-gray-600 mt-2">Disponibles</div>
        </div>
        <div class="bg-white rounded-lg shadow p-6 flex flex-col items-center">
            <div class="text-3xl font-extrabold text-blue-600 flex items-center">{{ totalReserves is defined ? totalReserves : equipementsAll|filter(e => e.etat == 'Réservé' or e.etat == 'reservé' or e.etat == 'Reserve' or e.etat == 'reserve')|length }}</div>
            <div class="text-gray-600 mt-2">Réservés</div>
        </div>
        <div class="bg-white rounded-lg shadow p-6 flex flex-col items-center">
            <div class="text-3xl font-extrabold text-orange-500 flex items-center">{{ totalMaintenance is defined ? totalMaintenance : equipementsAll|filter(e => e.etat == 'En maintenance' or e.etat == 'maintenance' or e.etat == 'Maintenance')|length }}</div>
            <div class="text-gray-600 mt-2">En maintenance</div>
        </div>
    </div>

    <div class="overflow-x-auto rounded-lg shadow bg-white">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">État</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Affecté à</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Remis ?</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          {% for equipement in equipements %}
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">{{ equipement.nom }}</td>
              <td class="px-6 py-4 whitespace-nowrap">
                {% if equipement.etat == 'Maintenance' %}
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">En maintenance</span>
                {% elseif equipement.etat == 'Disponible' %}
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">Disponible</span>
                {% elseif equipement.etat == 'Pris' %}
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">Pris</span>
                {% elseif equipement.etat == 'Declasser' %}
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">Déclassé</span>
                {% else %}
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">{{ equipement.etat }}</span>
                {% endif %}
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                {% if equipement.maintenancier %}
                  {{ equipement.maintenancier.email }}
                {% else %}
                  <span class="text-gray-400">Non affecté</span>
                {% endif %}
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <a href="#" class="text-blue-600 hover:underline">Voir</a>
                {% if is_granted('ROLE_ADMIN') %}
                  | <a href="{{ path('admin_equipement_affecter', {'id': equipement.id}) }}" class="text-green-600 hover:underline">Affecter</a>
                {% endif %}
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                {% if equipement.etat == 'Disponible' %}
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-50 text-green-700">Oui</span>
                {% else %}
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-50 text-gray-700">Non</span>
                {% endif %}
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="5" class="px-6 py-4 text-center text-gray-500">Aucun équipement en maintenance.</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}
