{% extends 'base.html.twig' %}

{% block title %}Réservation des équipements{% endblock %}

{% block stylesheets %}
<style>
body {
    min-height: 100vh;
    margin: 0;
    background: #fff;
    font-family: 'Segoe UI', Arial, sans-serif;
}
.reservation-container {
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 4px 24px rgba(33, 150, 243, 0.06), 0 1.5px 6px rgba(67, 233, 123, 0.06);
    max-width: 800px;
    margin: 60px auto;
    padding: 32px 28px 28px 28px;
}
.reservation-title {
    color: #2196f3;
    text-align: center;
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 24px;
    letter-spacing: 1px;
}
.equipements-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 24px;
    background: #fff;
}
.equipements-table th, .equipements-table td {
    border: 1px solid #e0e0e0;
    padding: 10px 8px;
    text-align: center;
}
.equipements-table th {
    background: #f5faff;
    color: #2196f3;
    font-weight: 600;
}
.equipements-table tr:nth-child(even) {
    background: #f8faff;
}
.reserve-btn {
    background: linear-gradient(90deg, #2196f3 60%, #43e97b 100%);
    color: #fff;
    border: none;
    border-radius: 6px;
    padding: 7px 18px;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    text-decoration: none;
    transition: background 0.2s;
    box-shadow: 0 1px 4px rgba(33,150,243,0.07);
}
.reserve-btn:disabled {
    background: #bdbdbd;
    cursor: not-allowed;
}
.reserve-btn:hover:not(:disabled) {
    background: linear-gradient(90deg, #43e97b 60%, #2196f3 100%);
}
.success-message {
    color: #4caf50;
    background: #e8f5e9;
    border-left: 4px solid #4caf50;
    padding: 10px;
    margin-bottom: 20px;
    border-radius: 4px;
}
.error-message {
    color: #f44336;
    background: #ffebee;
    border-left: 4px solid #f44336;
    padding: 10px;
    margin-bottom: 20px;
    border-radius: 4px;
}
</style>
{% endblock %}

{% block body %}
<div class="reservation-container">
    <div class="reservation-title">Réservation des équipements</div>
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="{{ label == 'success' ? 'success-message' : 'error-message' }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}
    <table class="equipements-table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>État</th>
                <th>Disponible</th>
                <th>Capteurs</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for equipement in equipements %}
            <tr>
                <td>{{ equipement.nom }}</td>
                <td>{{ equipement.description|default('-') }}</td>
                <td>{{ equipement.etat }}</td>
                <td>{{ equipement.disponible ? 'Oui' : 'Non' }}</td>
                <td>{{ equipement.capteurs|default('-') }}</td>
                <td>
                    {% if equipement.disponible %}
                        <form action="{{ path('reservation_index') }}" method="post" style="margin:0;">
                            <input type="hidden" name="equipement_id" value="{{ equipement.id }}">
                            <button type="submit" class="reserve-btn">Réserver</button>
                        </form>
                    {% else %}
                        <button class="reserve-btn" disabled>Indisponible</button>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr><td colspan="6">Aucun équipement disponible.</td></tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
